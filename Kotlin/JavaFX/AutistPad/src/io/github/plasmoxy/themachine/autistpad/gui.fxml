<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #08080D;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.plasmoxy.themachine.autistpad.Controller">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="600.0" style="-fx-background-color: #10100F; -fx-border-color: #fff;">
         <children>
            
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#buttonSavePressed" style="-fx-focus-color: #0FF;" text="save thos filez" textAlignment="JUSTIFY">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
               <font>
                  <Font name="Consolas" size="12.0" />
               </font>
            </Button>

            <Button alignment="CENTER" mnemonicParsing="false" onAction="#buttonOpenPressed" style="-fx-focus-color: #F0F;" text="open bob" textAlignment="JUSTIFY">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
               <font>
                  <Font name="Consolas" size="12.0" />
               </font>
            </Button><Button fx:id="buttonClear" alignment="CENTER" mnemonicParsing="false" onAction="#buttonClearPressed" style="-fx-focus-color: #F00;" text="Delet all textzt ( and cry )" textAlignment="JUSTIFY">
            <HBox.margin>
               <Insets left="5.0" right="5.0" />
            </HBox.margin>
               <font>
                  <Font name="Consolas" size="12.0" />
               </font>
         </Button>
            
         </children>
      </HBox>
   </top>
   <center>
      <TextArea fx:id="maintext" prefHeight="200.0" prefWidth="200.0" style="-fx-focus-color: transparent; -fx-text-fill: black;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <font>
            <Font name="Consolas" size="16.0" />
         </font>
      </TextArea>
   </center>
</BorderPane>
